@section Scripts{
    <script type="text/javascript">
        $(function () {
            $("a.tooltip1").mouseover(function (e) {
                // 创建<div>元素
                var tooltip = "<div id='tooltip1'>" + this.title + "</div>";
                $("body").append(tooltip);

                $("#tooltip1").css({
                    "top": e.pageY + "px",
                    "left": e.pageX + "px"
                }).show("fast");

            }).mouseout(function () {
                $("#tooltip1").remove();
            })

        })
    </script>
    <script type="text/javascript">
        $(function () {
            _initHidden();
            _initShowFunc();
        })

        function _initHidden() {
            var $t_a = $('.test :hidden');
            var $t_b = $('.test:hidden');
            var len_a = $t_a.length;
            var len_b = $t_b.length;

            alert("$('.test :hidden') = " + len_a);
            alert("$('.test:hidden') = " + len_b);
        }

        function _initShowFunc() {
            var $category = $('ul li:gt(5):not(:last)');
            $category.hide();
            var $toggleBtn = $('div.showmore > a');
            $toggleBtn.click(function () {
                $category.show();
                $(this).find('span')
                    .css("background", "url(image/up.gif) no-repeat, 0 0")
                    .text("精简显示品牌");
                $('ul li').filter(":contains('佳能'),:contains('尼康'),:contains('奥林巴斯')")
                    .addClass('promoted');
                return false;

            })

        }
    </script>
}
